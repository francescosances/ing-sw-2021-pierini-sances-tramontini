<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="1000.0" styleClass="rootPane"
           stylesheets="@../css/select_leader_cards_scene.css" xmlns="http://javafx.com/javafx/11.0.2"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.view.gui.scene.SelectLeaderCardsController">
   <Group scaleX="1.5" scaleY="1.5">
      <AnchorPane layoutX="-28.0" layoutY="100.0" prefHeight="400.0" prefWidth="577.0">
         <VBox layoutX="71.0" layoutY="120.0" prefHeight="200.0" prefWidth="100.0">
            <AnchorPane prefHeight="100.0" prefWidth="200.0">
               <Label fx:id="lbl" layoutX="160.0" layoutY="3.0" text="Choose cards:" textAlignment="CENTER"
                      textFill="#fdc309" AnchorPane.bottomAnchor="20.0">
                  <font>
                     <Font size="17.0"/>
                  </font>
               </Label>
            </AnchorPane>
            <HBox prefHeight="250.0" prefWidth="200.0">
               <ImageView fx:id="img1" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                          preserveRatio="true" styleClass="card">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0"/>
                  </HBox.margin>
                  <Image url="@../images/cards/transparent.png"/>
               </ImageView>
               <ImageView fx:id="img2" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                          preserveRatio="true" styleClass="card">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0"/>
                  </HBox.margin>
                  <Image url="@../images/cards/transparent.png"/>
               </ImageView>
               <ImageView fx:id="img3" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                          preserveRatio="true" styleClass="card">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0"/>
                  </HBox.margin>
                  <Image url="@../images/cards/transparent.png"/>
               </ImageView>
               <ImageView fx:id="img4" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                          preserveRatio="true" styleClass="card">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0"/>
                  </HBox.margin>
                  <Image url="@../images/cards/transparent.png"/>
               </ImageView>
            </HBox>
            <Button prefHeight="50.0" prefWidth="440.0" fx:id="btnChoose" onAction="#choose"
                    defaultButton="true" styleClass="btn, btn-disabled">
               <VBox.margin>
                  <Insets top="30.0"/>
               </VBox.margin>
            </Button>
         </VBox>
      </AnchorPane>
   </Group>
</StackPane>
